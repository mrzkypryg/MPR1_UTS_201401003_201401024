<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:elevation="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:id="@+id/RecyclerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_course"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#40d7cb"
            app:cardCornerRadius="16dp" >

            <ImageView
                android:id="@+id/img_item_course"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_calculate_24" />
        </androidx.cardview.widget.CardView>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/cardview_course"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                tools:text="Algebra" />

            <TextView
                android:id="@+id/tv_item_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                tools:text="Mathematical symbols and the rules for manipulating these symbols in formulas" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>